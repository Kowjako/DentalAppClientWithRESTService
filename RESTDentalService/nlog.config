<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="${basedir}\internal-nlog.txt">
  
  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>
  
  <targets>
      <target xsi:type="File"
              name="allfile"
              fileName="d:\RestaurantApiLogs\nlog-all-${shortdate}.log"
              layout="${longdate}|${aspnet-traceidentifier}|${uppercase:${level}}|${threadid}|${logger}|${message} ${exception:format=ToString}|${aspnet-request-method}|${aspnet-request-url}|${aspnet-mvc-action}|${aspnet-request-posted-body}" />
    <target xsi:type="File"
              name="exceptions"
              fileName="d:\RestaurantApiLogs\nlog-exceptions-${shortdate}.log"
              layout="${longdate}|${aspnet-traceidentifier}|${uppercase:${level}}|${threadid}|${logger}|${message} ${exception:format=ToString}|${aspnet-request-method}|${aspnet-request-url}|${aspnet-mvc-action}|${aspnet-request-posted-body}" />
    <target xsi:type="File"
              name="timings"
              fileName="d:\RestaurantApiLogs\nlog-timings-${shortdate}.log"
              layout="${longdate}|${aspnet-traceidentifier}|${uppercase:${level}}|${threadid}|${logger}|${message} ${exception:format=ToString}|${aspnet-request-method}|${aspnet-request-url}|${aspnet-mvc-action}|${aspnet-request-posted-body}" />
  </targets>
  
  <!-- rules to map from logger name to target -->
  <rules>
    <logger name="*" minlevel="Trace" writeTo="allfile" />
    <logger name="RESTDentalService.*" minlevel="Error" writeTo="exceptions" />
    <logger name="RESTDentalService.Middleware.RequestTimeMiddleware" minlevel="Trace" writeTo="timings" />
  </rules>
  
</nlog>